<LoginBoxLayout>:
    id: loginbox
    orientation:'vertical'
    cols:1
    size_hint:None,None
    width: '300sp'
    pos_hint: {'center_x':0.5,'center_y':0.5}
    md_bg_color: rgb(*COLOR_CARD)
    radius:[20,] 
    border_radius:20
    spacing:'10dp'
    padding:'25dp'
    adaptive_height: True
