<FeedScreen>:
    name: 'feed'
    #MyLabel:
    #    text: "The falcon cannot hear the falconer..."
    Carousel:
        id: post_carousel
        direction: 'right'



<PostTitle>:
    id: post_title
    text: ''
    size_hint_y: None
    height: self.texture_size[1]
    font_style: 'H5'
    halign: 'center'
    height: '25'
    size_hint_y: None


<PostImageLayout>:
    id: image_layout
    cols: 1
    orientation: 'vertical'
    size_hint: (1,None)
    # md_bg_color: 1,1,0,1
    pos_hint: {'center_x':0.5} #, 'y':0.5}
    # height: '100dp' #self.minimum_height
    # width: '100dp'
    height: '300sp'
    # spacing:'100dp'
    # padding:'100dp'

<PostImage>:
    # height: '25'
    # size: self.norm_image_size
    id: post_image
    allow_stretch: True
    # keep_ratio: True
    
    size_hint_y: None
    size_hint_x: None
    pos_hint: {'center_x':0.5}
    size: (self.height*self.image_ratio,self.height)
    # width: self.parent.width
    # height: self.parent.width/self.image_ratio
    # height: self.height
    # width: self.height*self.image_ratio
