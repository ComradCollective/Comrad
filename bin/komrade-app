#!/bin/bash

##
# Run the mobile app
##

export KOMRADE_SHOW_LOG=0

SCRIPTPATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

path=`realpath "$SCRIPTPATH/../komrade/app/main.py"`
pathvenv=`realpath "$SCRIPTPATH/../../venv/bin/activate"`
source $pathvenv

python "$path" $*


#if command -v deactivate &> /dev/null
#then
#    deactivate
#fi
